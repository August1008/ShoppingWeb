@page "/Checkout"
@inherits CheckOutBase
<h3>Checkout</h3>

<div class="row">
    <div class="col-md-6">
        <div id="paypal-button-container"></div>
    </div>
    <div class="col-md-6">
        <h4 class="mb-3">Payment Sumary</h4>
        @if(ShoppingItems != null && ShoppingItems.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Products</td>
                        <td>Price</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in ShoppingItems)
                    {
                        <tr>
                            <td><strong>@item.Quantity</strong> X @item.ProductName</td>
                            <td><strong>@item.ProductPrice.ToString("C")</strong></td>
                        </tr>
                    }
                    <tr>
                        <td><b>Total</b></td>
                        <td><b>@ShoppingItems.Sum(i => i.Quantity * i.ProductPrice).ToString("C")</b></td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <h3>You have on items in cart</h3>
        }
    </div>
</div>
